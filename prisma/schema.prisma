generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  password     String // Hashed password
  name         String?
  role         UserRole    @default(BUYER) // ADMIN, SELLER, BUYER
  isBanned     Boolean     @default(false) // Admin ban/suspend
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  products     Product[] // If role is SELLER
  ordersPlaced Order[]     @relation("BuyerOrders")
  // ordersSold   Order[]   @relation("SellerOrders") // If role is SELLER
  OrderItem    OrderItem[]

  @@map("users")
}

enum UserRole {
  ADMIN
  SELLER
  BUYER
  // Optional Seller Sub-roles
  // MANAGER 
  // ACCOUNTANT
  // INVENTORY_STAFF
}

// Product Model
model Product {
  id          String      @id @default(uuid())
  title       String      @db.VarChar(255)
  description String?
  category    String // For browse/search
  price       Float // Base price
  quantity    Int // Stock quantity
  images      String[] // Multiple image uploads
  videoUrl    String? // Product detail view
  seller      User        @relation(fields: [sellerId], references: [id])
  sellerId    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  // Add relation to OrderItem, Ratings/Reviews (Optional)
  OrderItem   OrderItem[]

  @@map("products")
}

model Order {
  id          String      @id @default(uuid())
  buyer       User        @relation("BuyerOrders", fields: [buyerId], references: [id])
  buyerId     String
  // seller      User        @relation("SellerOrders", fields: [sellerId], references: [id])
  // sellerId    String?
  totalAmount Float
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  // Add relation to OrderItem

  orderItems OrderItem[]

  @@map("orders")
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id        String  @id @default(uuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  productId String
  sellerId  String
  seller    User    @relation(fields: [sellerId], references: [id])
  quantity  Int
  price     Float? // Price at the time of order
  status    OrderStatus @default(PENDING)
  Product   Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}
